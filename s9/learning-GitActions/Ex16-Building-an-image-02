# .github/workflows/simple-ci.yml

# This CI workflow checks out the repository, builds a Docker image from the specified directory.

name: CI Workflow

on:
  push:
    branches:
      - main

jobs:
  checkout:
    name: Stage 1 - Checkout
    runs-on: [self-hosted, repo-build]                

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Checkout Info
        run: |
          echo "Checking out the repository. Please wait .........."            
          sleep 5
          pwd
          ls              

  build_image_and_push_into_dockerhub:
    name: Build image and push to DockerHub
    runs-on: [self-hosted, repo-build]          
    needs: checkout

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Show Docker version
        run: sudo docker --version

      # - name: Login to DockerHub
      #   run: echo "${{ secrets.DOCKERHUB_TOKEN }}" | sudo docker login -u "${{ secrets.DOCKERHUB_USERNAME }}" --password-stdin

      - name: Build Docker image
        run: |
          IMAGE_NAME=${{ secrets.DOCKERHUB_USERNAME }}/app01
          IMAGE_TAG=latest
          echo "Building Docker image: $IMAGE_NAME:$IMAGE_TAG"
          sudo docker build -t $IMAGE_NAME:$IMAGE_TAG s9/app01
          sudo docker images

      # - name: Push Docker image
      #   run: |
      #     IMAGE_NAME=${{ secrets.DOCKERHUB_USERNAME }}/app01
      #     IMAGE_TAG=latest
      #     echo "Pushing Docker image: $IMAGE_NAME:$IMAGE_TAG"
      #     sudo docker push $IMAGE_NAME:$IMAGE_TAG
